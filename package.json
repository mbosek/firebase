    "autoprefixer": "~6.4.0",
    "cross-env": "~2.0.0",
    "css-loader": "~0.23.1",
    "del-cli": "~0.2.0",
    "eslint": "~3.3.0",
    "express": "~4.14.0",
    "extract-text-webpack-plugin": "~1.0.1",
    "firebase-tools": "3.0.7",
    "html-webpack-plugin": "~2.22.0",
    "jasmine-core": "~2.4.1",
    "karma": "~1.2.0",
    "karma-chrome-launcher": "~1.0.1",
