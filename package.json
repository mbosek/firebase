    "angularfire2": "2.0.0-beta.3-pre2",
    "core-js": "~2.4.1",
    "firebase": "3.2.1",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "~0.6.12"
  },
  "devDependencies": {
    "@types/core-js": "~0.9.30",
    "@types/jasmine": "~2.2.31",
